        <div class="columns mt-4">
          <div class="column has-text-centered">
            <a href="https://github.com/tiendat77/love-alarm" target="_blank">
              <img class="badge" src="/images/github.svg">
            </a>
          </div>

          <div class="column has-text-centered">
            <a onclick="notifyAppStore()">
              <img class="badge" src="/images/app-store.svg">
            </a>
          </div>

          <div class="column has-text-centered">
            <a onclick="notifyGooglePlayStore()">
              <img class="badge" src="/images/google-play-store.svg">
            </a>
            <a id="apk-download" href={apkUrl} download target="_blank" hidden></a>
          </div>
        </div>
      </div>

      <div class="column is-flex is-align-items-center is-justify-content-center">
        <img src="/images/fdd0c2610cdd728ba10d85ed7df6ca99.png">
      </div>
    </div>
  </div>
</section>

<script is:inline>
  function notifyAppStore() {
    alert("Just kidding, Love Alarm is not available on App Store yet");
  }

  function notifyGooglePlayStore() {
    if (confirm("Love Alarm is not available on Google Play yet. Do you want to download apk instead?")) {
      document.getElementById("apk-download").click();
    }
  }
</script>

<style lang="scss">
  @import '../../node_modules/bulma/sass/utilities/mixins.sass';

  .love-alarm {
    color: var(--color-primary);
    background: linear-gradient(to right, #f858a5 0.4%, #fb74b5 60%, rgba(255, 101, 240, 0.61) 126%);
    background-clip: text;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .swirly-arrow {
    height: auto;
    width: 60px;
  }

  @include until(768px) {
    .badge {
      width: 250px;
    }
  }

  @include from(1024px) {
    .main {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }
</style>